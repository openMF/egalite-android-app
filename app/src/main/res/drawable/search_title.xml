<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="?bordereffect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/layout_padding" >

        <Spinner
            android:id="@+id/spinner_dsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="4dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_ab_default_example"
            android:textAppearance="@style/text_Medium" />

        <EditText
            android:id="@+id/edt_dsb_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/spinner_dsb"
            android:ems="10"
            android:hint="@string/edit_hint"
            android:paddingLeft="5dp"
            android:background="@drawable/searchimg"
            android:textAppearance="@style/text_Medium" >
        </EditText>
    </RelativeLayout>