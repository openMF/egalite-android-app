<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="30dp"
                android:top="5dp"
                android:bottom="5dp"
                android:drawable="@drawable/plus">
            </item>
        </layer-list>
    </item>
 
    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="30dp"
                android:top="5dp"
                android:bottom="5dp"
                android:drawable="@drawable/minus">
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:left="5dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp"
                android:drawable="@drawable/plus">
            </item>
        </layer-list>
    </item>
</selector>