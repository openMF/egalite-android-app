<resources>

    <style name="Theme" parent="android:Theme">
        <item name="android:windowTitleSize">20dip</item>
    </style>

    <style name="Theme.Light">
        <item name="pageBackground">@style/background_light</item>
        <item name="textTitle">@style/text_light</item>
        <item name="view">@style/view_light</item>
        <item name="textBase">@style/text_base_light</item>
        <item name="base_headind_back">@style/base_heading_light</item>
        <!-- <item name="setting">@style/base_setting_light</item> -->
        <item name="settingdrawer">@style/setting_drawer_light</item>
        <item name="settingtextcolor">@style/setting_text_light</item>
        <item name="bordereffect">@style/border_light</item>
        <item name="tabhost_background">@style/tabhostbackground_light</item>
        <item name="profileimage">@style/profileimage_light</item>
