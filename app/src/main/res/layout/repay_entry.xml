<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txnscreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/layout_padding" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/linlay_customer"
                style="?bordereffect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlay_repay_entry"
                android:paddingBottom="@dimen/layout_padding"
                android:paddingTop="@dimen/layout_padding"
                tools:ignore="UselessParent" >

                <ImageView
                    android:id="@+id/img_repay_entry_customer"
                    style="?profileimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    tools:ignore="ObsoleteLayoutParam,ContentDescription" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img_dsb_entry_customer"
                    android:orientation="vertical" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_repay_entry_customername"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textAppearance="@style/text_Small"
                        tools:ignore="HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_repay_entry_custid"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingLeft="10dp"
                        android:text=""
                        android:textAppearance="@style/text_Small" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rellay_dsb_entry_lpg"
                style="?bordereffect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlay_customer"
                android:layout_marginTop="@dimen/lay_between_padding"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                tools:ignore="UselessParent" >

                <LinearLayout
                    android:id="@+id/linlay_entry_loan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/gridselector"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/imgl" />

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/loandetails"
                        android:textAppearance="@style/text_Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlay_entry_paidloan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gridselector"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/imgp" />

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/paidsheduls"
                        android:textAppearance="@style/text_Small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlay_entry_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/lay_between_padding"
                    android:background="@drawable/gridselector"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/imgg" />

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/groups"
                        android:textAppearance="@style/text_Small" />
                </LinearLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rellay_dsb_entry_lpg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/lay_between_padding" >

                <LinearLayout
                    style="?bordereffect"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    tools:ignore="UselessLeaf" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/layout_padding" >

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_cbs_ac_refno"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/cbsRefNo"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_cbs_ac_refno_val"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_agent_bal"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/agent_balance"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_agent_bal_val"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text=""
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_ccy_code"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/ccy"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_ccy_code_val"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_componet_name"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/component_name"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_componet_name_val"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text=""
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_agenda_amt"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/Agendaamt"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_agenda_amt_val"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <!--
                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_disb_type"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/DisbType"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="HardcodedText" />

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_disb_type_val"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/text_Small"
                                android:textColor="@color/textlight"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>                        -->

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/redemption_type" />

                            <RadioGroup
                                android:id="@+id/rad_gro_repay_entry_redtype"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:orientation="horizontal" >

                                <RadioButton
                                    android:id="@+id/radbtn_repay_entry_red_partial"
                                    style="?textTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/partial"
                                    android:textAppearance="@style/text_Small" />

                                <RadioButton
                                    android:id="@+id/radbtn_repay_entry_red_full"
                                    style="?textTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/full"
                                    android:textAppearance="@style/text_Small" />
                            </RadioGroup>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tableRow1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_input_amount"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/InputAmount"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="DuplicateIds,HardcodedText" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="0.5"
                                android:weightSum="1.0" >

                                <EditText
                                    android:id="@+id/edt_repay_entry_input_amount_val"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:background="@drawable/searchimg"
                                    android:hint="@string/hint_enter_amount"
                                    android:inputType="numberDecimal"
                                    android:digits="0123456789."
                                    android:textAppearance="@style/text_Small"
                                    tools:ignore="DuplicateIds,HardcodedText" />

                                <com.bfsi.egalite.support.MyTextView
                                    android:id="@+id/txv_minamt"
                                    style="?textTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="0.5"
                                    android:text=""
                                    android:textAppearance="@style/text_Small" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linlay_narrative"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:weightSum="1.0" >

                            <com.bfsi.egalite.support.MyTextView
                                android:id="@+id/txv_repay_entry_narrative"
                                style="?textTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:text="@string/rpy_narrative"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="DuplicateIds,HardcodedText" />

                            <EditText
                                android:id="@+id/edt_repay_entry_narrative_val"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.5"
                                android:background="@drawable/searchimg"
                                android:hint="@string/hint_enter_narrative"
                                android:textAppearance="@style/text_Small"
                                tools:ignore="DuplicateIds,HardcodedText" />
                        </LinearLayout>
                    </TableLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>