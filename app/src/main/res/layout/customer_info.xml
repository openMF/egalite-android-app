<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
     >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/table_layout"
            style="?bordereffect"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical|horizontal" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/customer_id"
                        android:textAppearance="@style/text_Small"
                        tools:ignore="HardcodedText" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_customer_info_customer_id"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textAppearance="@style/text_Small"
                        android:textColor="@color/textlight"
                        tools:ignore="HardcodedText" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/customer_name"
                        android:textAppearance="@style/text_Small"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_customer_info_custome_name"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textAppearance="@style/text_Small"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/customer_address"
                        android:textAppearance="@style/text_Small"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_customer_info_customer_address"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textAppearance="@style/text_Small"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/customer_idproof"
                        android:textAppearance="@style/text_Small"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_customer_info_customer_idproof"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textAppearance="@style/text_Small"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </FrameLayout>
            </TableRow>
            
             <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_customer_info_customer_idproof"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Select Acc Number"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/black"
                        tools:ignore="DuplicateIds,HardcodedText" />

            <TableRow>

                <LinearLayout
                    android:id="@+id/linearlayout_list"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding"
                    android:scrollbars="horizontal" >
                </LinearLayout>

                <ListView
                    android:id="@+id/list_customer_info_acc_details"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:scrollbars="none" >
                </ListView>
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>