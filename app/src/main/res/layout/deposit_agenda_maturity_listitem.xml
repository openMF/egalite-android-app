<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rellay_maturity_agenda_listitem"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >

    <View
        android:id="@+id/view_color_payment"
        android:layout_width="4dp"
        android:layout_alignParentLeft="true"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_depo_agen_matp_listitem_name"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/view_payment"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_depo_agen_matp_listitem_accno"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_depo_agen_matp_listitem_matamt"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

</RelativeLayout>