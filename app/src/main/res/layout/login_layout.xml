<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackgroundimg"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:id="@+id/rellay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/linlay_loginlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.bfsi.egalite.support.MyTextView
                android:id="@+id/txv_login_layout_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textAppearance="@style/text_Small"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/rellay_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/logo_withoutbox" />

    <RelativeLayout
        android:id="@+id/rellay_signin"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/newborderfour" >

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/newborderthree"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="15dp"
            android:text="@string/signup"
            android:textAppearance="@style/text_Medium"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/btn_signup"
            android:background="@drawable/newborderfive"
            android:paddingBottom="15dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="15dp"
            android:text="@string/login"
            android:textAppearance="@style/text_Medium"
            android:textColor="@color/black"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_signup"
            android:layout_centerHorizontal="true"
            android:padding="15dp" >

            <EditText
                android:id="@+id/edt_loginlay_userid"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/userid_signin"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:digits="0123456789QWERTYUIOPASDFGHJKLZXCVBNM"
                android:textColorHint="@color/darkGreyFaint" >
            </EditText>

            <EditText
                android:id="@+id/edt_loginlay_password"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_loginlay_userid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="@string/password_signin"
                android:inputType="textPassword"
                android:padding="5dp"
                android:paddingLeft="8dp"
                android:textColor="@color/black"
                android:textColorHint="@color/darkGreyFaint" >
            </EditText>

            <Button
                android:id="@+id/btn_loginlay_login"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_loginlay_password"
                android:layout_marginTop="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/btn_login"
                android:textAppearance="@style/text_Large"
                android:textColor="@color/black" >
            </Button>

           <!--  <com.bfsi.egalite.support.MyTextView
                android:id="@+id/txv_loginlay_forgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_loginlay_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/txv_forgetpass"
                android:textAppearance="@style/text_Medium"
                android:textColor="@color/black" /> -->
        </RelativeLayout>
    </RelativeLayout>

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_laginlay_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txv_laginlay_title2"
        android:layout_centerHorizontal="true"
        android:text="@string/bottom_title1"
        android:textAppearance="@style/text_Extra_Small"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_laginlay_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp"
        android:text="@string/bottom_title2"
        android:textAppearance="@style/text_Extra_Small"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>