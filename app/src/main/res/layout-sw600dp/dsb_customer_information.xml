<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context=".CustomerDetailsView" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <TableLayout
            style="?bordereffect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_name"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/Name"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_name_val"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_dob"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/dob"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_dob_val"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_gender"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/gender"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_gender_val"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text=""
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_phoneno"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/PhNo"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_phoneno_val"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="9999999999"
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0"
                tools:ignore="DuplicateIds" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_address"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/cust_address"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_address_val"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="Gourav Gardens"
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_city"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/cust_city"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_city_val"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="Anantapur"
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_state"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/cust_state"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_state_val"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="Andhra Pradesh"
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1.0" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_country"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5"
                    android:text="@string/cust_country"
                    android:textAppearance="@style/text_Medium"
                    tools:ignore="DuplicateIds,HardcodedText" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_dsb_customer_info_country_val"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="0.5"
                    android:text="India"
                    android:textAppearance="@style/text_Medium"
                    android:textColor="@color/textlight"
                    tools:ignore="DuplicateIds,HardcodedText" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                style="?bordereffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:paddingBottom="1dp"
                android:weightSum="1.0" >

                <LinearLayout
                    android:id="@+id/acno_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:scrollbarAlwaysDrawVerticalTrack="true" >

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_dsb_customer_acc_details"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:padding="2dp"
                        android:text="@string/select_laon" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:id="@+id/linearlayout_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding"
                    android:scrollbars="horizontal" >
                </LinearLayout>

                <ListView
                    android:id="@+id/list_dsb_customer_acc_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:scrollbars="none" >
                </ListView>
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>