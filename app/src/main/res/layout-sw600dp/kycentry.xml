<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linlay_photo"
                style="?bordereffect"
                android:layout_width="290dp"
                android:layout_height="380dp"
                android:orientation="vertical"
                android:padding="5dp" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/textView1"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/photo"
                    android:textAppearance="@style/text_Medium" />

                <ImageView
                    android:id="@+id/img_kyc_entry_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cameralight" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlay_proof1"
                style="?bordereffect"
                android:layout_width="290dp"
                android:layout_height="380dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/linlay_photo"
                android:orientation="vertical"
                android:padding="5dp" >

                <Spinner
                    android:id="@+id/spinner_idproof_select1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_ab_default_example"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/img_kyc_entry_selct1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cameralight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardno"
                        android:textAppearance="@style/text_Medium" />

                    <EditText
                        android:id="@+id/edt_kycproof1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/searchimg"
                        android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM/-"
                        android:inputType="text"
                        android:textAppearance="@style/text_Medium" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rad_grp_select1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radbtn_idproof1"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/idproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_addressproof1"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addressproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_signproof1"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signatureproof"
                        android:textAppearance="@style/text_Medium" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlay_proof2"
                style="?bordereffect"
                android:layout_width="290dp"
                android:layout_height="380dp"
                android:layout_below="@+id/linlay_proof1"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="5dp" >

                <Spinner
                    android:id="@+id/spinner_idproof_select2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/spinner_ab_default_example"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/img_kyc_entry_selct2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cameralight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardno"
                        android:textAppearance="@style/text_Medium" />

                    <EditText
                        android:id="@+id/edt_kycproof2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/searchimg"
                        android:inputType="text"
                        android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM/-"
                        android:textAppearance="@style/text_Medium" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rad_grp_select2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radbtn_idproof2"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/idproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_addressproof2"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addressproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_signproof2"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signatureproof"
                        android:textAppearance="@style/text_Medium" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linlay_proof3"
                style="?bordereffect"
                android:layout_width="290dp"
                android:layout_height="380dp"
                android:layout_below="@+id/linlay_proof1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/linlay_proof2"
                android:orientation="vertical"
                android:padding="5dp" >

                <Spinner
                    android:id="@+id/spinner_idproof_select3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/spinner_ab_default_example"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/img_kyc_entry_selct3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cameralight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardno"
                        android:textAppearance="@style/text_Medium" />

                    <EditText
                        android:id="@+id/edt_kycproof3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/searchimg"
                        android:inputType="text"
                        android:digits="0123456789qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM/-"
                        android:textAppearance="@style/text_Medium" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rad_grp_select3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radbtn_idproof3"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/idproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_addressproof3"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addressproof"
                        android:textAppearance="@style/text_Medium" />

                    <RadioButton
                        android:id="@+id/radbtn_signproof3"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/signatureproof"
                        android:textAppearance="@style/text_Medium" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/kyc_next"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linlay_proof3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/next" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>