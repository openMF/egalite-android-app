<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rellay_repay_agenda_listitem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
     <View
        android:id="@+id/view_color_repayment"
        android:layout_width="4dp"
        android:layout_alignParentLeft="true"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true" />
    

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_repay_agenda_listitem_name"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:textAppearance="@style/text_Medium" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_repay_agenda_listitem_accno"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:textAppearance="@style/text_Medium" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_repay_agenda_listitem_amt"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:textAppearance="@style/text_Medium" />

</RelativeLayout>