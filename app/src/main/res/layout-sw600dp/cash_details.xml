<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context=".CustomerDetailsView" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.bfsi.egalite.support.MyTextView
                android:id="@+id/myprofile"
                style="?textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/myprofile"
                android:textAppearance="@style/text_Large"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TableLayout
                android:id="@+id/table_lay"
                style="?bordereffect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myprofile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_padding"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical|horizontal" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/Name"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_name"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="Swetha"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/dob"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_dob"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="28-Mar-1989"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/gender"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_gendor"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="Male"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/PhNo"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_telph"
                        style="?textTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="9999999999"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tablerow_address1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0"
                    tools:ignore="DuplicateIds" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_address1"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_address1"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tablerow_address2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0"
                    tools:ignore="DuplicateIds" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_address2"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_address2"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tablerow_address3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0"
                    tools:ignore="DuplicateIds" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_address3"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_address3"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tablerow_address4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0"
                    tools:ignore="DuplicateIds" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_address4"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_address4"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text=""
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_city"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_city"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="Anantapur"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_state"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_state"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="Andhra Pradesh"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:weightSum="1.0" >

                    <com.bfsi.egalite.support.MyTextView
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="0.5"
                        android:text="@string/cust_country"
                        android:textAppearance="@style/text_Medium"
                        tools:ignore="DuplicateIds,HardcodedText" />

                    <com.bfsi.egalite.support.MyTextView
                        android:id="@+id/txv_cash_detail_country"
                        style="?textTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="0.5"
                        android:text="India"
                        android:textAppearance="@style/text_Medium"
                        android:textColor="@color/textlight"
                        tools:ignore="DuplicateIds,HardcodedText" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/linlay_savingsacc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table_lay"
                android:orientation="vertical" >

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/savingsaccount"
                    style="?textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/layout_padding"
                    android:text="@string/SavingsAccount"
                    android:textAppearance="@style/text_Large"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linearlayout_list_savingsacc"
                    style="?bordereffect"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:padding="@dimen/layout_padding"
                    android:scrollbars="horizontal" >

                    <ListView
                        android:id="@+id/list_savingsacc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:focusable="false"
                        android:scrollbars="none" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>