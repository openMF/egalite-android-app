            <LinearLayout
                style="?bordereffect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/lay_between_padding"
                android:orientation="horizontal"
                android:padding="@dimen/layout_padding" >

                <ImageView
                    android:id="@+id/img_depo_ent_pred_customer"
                    style="?profileimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true" />

                <com.bfsi.egalite.support.MyTextView
                    android:id="@+id/txv_depo_ent_pred_custname"
                    style="?textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" "
                    android:textAppearance="@style/text_Medium" />
            </LinearLayout>

            <TableLayout
                style="?bordereffect"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/lay_between_padding" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp" >

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deposit_acc_no"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_accno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deposit_currency"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deposit_open_date"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_opendt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/deposit_installment_freq"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_installfreq"
                            style="?textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text=""
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/installment_amt"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_installamt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/total_amt_paid_till_date"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_amtpaidtildt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/total_interest_earned"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_intearned"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/redemption_date"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_reddt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/redemption_amt"
                            android:textAppearance="@style/text_Medium" />

                        <com.bfsi.egalite.support.MyTextView
                            android:id="@+id/txv_depo_ent_pred_redamt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textAppearance="@style/text_Medium"
                            android:textColor="@color/textlight" />
                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp" >

                        <com.bfsi.egalite.support.MyTextView
                            style="?textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/narrative"
                            android:textAppearance="@style/text_Medium" />

                        <EditText
                            android:id="@+id/edt_depo_ent_pred_narrative"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/searchimg"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/hint_enter_narrative"
                            android:paddingLeft="8dp"
                            android:textAppearance="@style/text_Medium" />
                    </TableRow>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>