<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/rellay_enrolment_status_listitem" >

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_enrolment_status_listitem_name"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_enrolment_status_listitem_enr_no"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

    <com.bfsi.egalite.support.MyTextView
        android:id="@+id/txv_enrolment_status_listitem_status"
        style="?textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="1"
        android:padding="@dimen/layout_padding"
        android:text=""
        android:textAppearance="@style/text_Extra_Small" />

</RelativeLayout>